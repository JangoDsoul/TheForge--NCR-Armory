<Defs>

	<!--==============================================
	================ NCR Pith Hat ====================
	===============================================-->	

  <ThingDef ParentName="JDSNCRHeadgearBase">
		<defName>JDS_NCR_Pith_Hat</defName>
		<label>NCR Pith Hat</label>
		<description>"It is a dully colored helmet with a pair of goggles located on the brim, and a pack of Pyramid cigarettes in the loop of the helmet. It has a very rough "mass-produced" look to it, as it is issued to all NCR soldiers and MPs."</description>
	<graphicData>
      <texPath>Things/UI/NCR_Pith_Hat_UI</texPath>
    </graphicData>
    <apparel>
		<wornGraphicPath>Things/Headgear/NCR_Pith_Hat/NCR_Pith_Hat</wornGraphicPath>
		<tags>
			<li>JDS_NCRArmory_Headgear</li>			
			<li>JDS_NCRArmory_Pith_Hat</li>			
		</tags>
    </apparel>	
    <statBases>
		<WorkToMake>4000</WorkToMake>
		<MaxHitPoints>110</MaxHitPoints>
		<Mass>1.2</Mass>
		<Flammability>0.1</Flammability>
		<ArmorRating_Sharp>0.9</ArmorRating_Sharp>
		<ArmorRating_Blunt>0.7</ArmorRating_Blunt>
		<ArmorRating_Heat>0.3</ArmorRating_Heat>
		<Insulation_Cold>6</Insulation_Cold>
		<Insulation_Heat>17</Insulation_Heat>
		<EquipDelay>1</EquipDelay>
    </statBases>
    <costList>
		<Steel>20</Steel>
		<Cloth>120</Cloth>
    </costList>
  </ThingDef>

