	<!--==============================================
	================ NCR Ranger Hat ==================
	===============================================-->	

  <ThingDef ParentName="JDSNCRHeadgearBase">
		<defName>JDS_NCR_Ranger_Hat</defName>
		<label>NCR Ranger Hat</label>
		<description>"A campaign cover, also known as a "lemon squeezer" that is standard-issue to NCR patrol rangers. It is made of a stiff light khaki material and sports a polished brass Ranger cap badge, worn together as part of a uniform alongside handmade combat armor."</description>
	<graphicData>
      <texPath>Things/UI/NCR_Ranger_Hat_UI</texPath>
    </graphicData>
    <apparel>
		<wornGraphicPath>Things/Headgear/NCR_Ranger_hat/NCR_Ranger_hat</wornGraphicPath>
		<tags>
			<li>JDS_NCRArmory_Headgear</li>			
			<li>JDS_NCRArmory_Ranger_Hat</li>			
		</tags>
    </apparel>	
    <statBases>
		<WorkToMake>2500</WorkToMake>
		<MaxHitPoints>90</MaxHitPoints>
		<Mass>1</Mass>
		<Flammability>0.1</Flammability>
		<ArmorRating_Sharp>0.5</ArmorRating_Sharp>
		<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
		<ArmorRating_Heat>0.5</ArmorRating_Heat>
		<Insulation_Cold>6</Insulation_Cold>
		<Insulation_Heat>17</Insulation_Heat>
		<EquipDelay>1</EquipDelay>
    </statBases>
    <equippedStatOffsets>
	    <NegotiationAbility>0.25</NegotiationAbility>		
	</equippedStatOffsets>
    <costList>
		<Cloth>100</Cloth>
    </costList>
  </ThingDef>

