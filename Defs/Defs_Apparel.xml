<Defs>

	
	<!--==============================================
	============== NCR Fatigues Armor ================
	===============================================-->	

  <ThingDef ParentName="JDSNCRApparelBase">
		<defName>JDS_NCR_FatiguesArmor</defName>
		<label>NCR Fatigues Armor</label>
		<description>"The standard NCR trooper's uniform is one of the several variants of NCR armor. Composed of a khaki tunic with bellowed hip pockets and khaki breeches, worn with a desert facewrap and hardened leather pauldrons, black leather fingerless gloves, arm wraps, brown boots and khaki puttees. The uniform was designed to resist the rigors of the desert and long campaigns."</description>  
	<graphicData>
		<texPath>Things/UI/NCR_Fatigues_Armor_UI</texPath>
    </graphicData>
	<apparel>
		<wornGraphicPath>Things/Apparel/NCR_FatiguesArmor/NCR_FatiguesArmor</wornGraphicPath>
		<tags>
			<li>JDS_NCRArmory_Apparel</li>			
			<li>JDS_NCRArmory_FatiguesArmor</li>			
		</tags>			
    </apparel>
    <statBases>
		<WorkToMake>9000</WorkToMake>
		<MaxHitPoints>270</MaxHitPoints>
		<Mass>4</Mass>
		<Flammability>0.1</Flammability>
		<ArmorRating_Sharp>0.4</ArmorRating_Sharp>
		<ArmorRating_Blunt>0.08</ArmorRating_Blunt>
		<ArmorRating_Heat>0.1</ArmorRating_Heat>
		<Insulation_Cold>12</Insulation_Cold>
		<Insulation_Heat>16</Insulation_Heat>
		<EquipDelay>4</EquipDelay>
    </statBases>
    <equippedStatOffsets>
		<SocialImpact>0.35</SocialImpact>
		<MoveSpeed>-0.08</MoveSpeed>
	</equippedStatOffsets>
	<costList>
		<Steel>20</Steel>
		<Cloth>100</Cloth>		
	</costList>	
  </ThingDef>

